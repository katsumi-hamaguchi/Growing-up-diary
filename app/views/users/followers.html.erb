<h2>フォロワー</h2>
<div>表示人数：<%= @user.followers.count %>人</div>
<table class="table">
	<thead>
		<tr>
			<th>プロフィール画像</th>
			<th>ニックネーム</th>
			<th>フォロワー数</th>
			<th>フォロー数</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg", size: "60x60") %></td>
			<td><%= user.nickname%></td>
			<td>フォロワー数:<%= user.followers.count %></td>
			<td>フォロー数:<%= user.followings.count %></td>
			<td><%= render "relationships/follow_button", user: user %></td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>	
		</tr>
		<% end %>
	</tbody>
</table>