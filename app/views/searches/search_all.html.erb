<body class ="search-all-body">
  <div class="search-all-content">
    <% if @diary_or_user == "1"%>
      <h1>検索結果（日記タイトル）</h1>
      <tbody>
        <div class ="all-search-all">
          <% @diaries.each do |diary| %>
            <tr>
              <td>
                <%= link_to(diary.user) do %>
                <%= attachment_image_tag(diary.user, :profile_image, fallback: "no_image.jpg", size: "60x60") %>
                <% end %>
              </td>
              <td>
                <%= link_to(diary.user) do %>
                <%= diary.user.nickname %>
                <% end %>
              </td>
              <td><%= diary.title %></td>
              <td><%= link_to "詳細", diary_path(diary.id),class: "btn btn-primary btn-lg active" %></td>
                <div id="favorites-<%= diary.id %>"><%= render 'users/favorite', diary: diary %></div><br>
            </tr>
          <% end %>
        </div>
      </tbody>    
    <% elsif @diary_or_user == "2" %>

     <h1>検索結果（ニックネーム）</h1>
        <% @user.each do |user| %>
          
        <tr>
          <%= link_to(user) do %>
          <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
          <% end %>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <th>
            <%= link_to(user) do %>
            <%= user.nickname %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>フォロー人数</th>
          <th><%= user.followings.count %>人</th>
        </tr>
        <tr>
          <th>フォロワー人数</th>
              <th><%= user.followers.count %>人</th>
            </tr> 
        
        <% end %>
      </tbody>       
    <% end %>
  </div>
</body>