<% if @diary_or_user == "1"%>
  <h1>検索結果（日記タイトル）</h1>
  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td>
          <%= link_to(diary.user) do %>
          <%= attachment_image_tag(diary.user, :profile_image, fallback: "no_image.jpg", size: "60x60") %>
          <% end %>
        </td>
        <td><%= diary.user.nickname %></td>
        <td><%= diary.title %></td>
        <td><%= link_to "詳細", diary_path(diary.id),class: "btn btn-primary" %></td>
          <% if diary.favorited_by?(current_user) %>
            <td>
                <%= link_to diary_favorites_path(diary), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= diary.favorites.count %> いいね
                <% end %>
            </td>
          <% else %>
            <td>
                <%= link_to diary_favorites_path(diary), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= diary.favorites.count %> いいね
                <% end %>
            </td>
          <% end %><br>
      </tr>
    <% end %>
  </tbody>    
<% elsif @diary_or_user == "2" %>

 <h1>検索結果（ニックネーム）</h1>
    <% @user.each do |user| %>
      
    <tr><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %></tr>
    <tr>
      <th>ニックネーム</th>
      <th><%= user.nickname %></th>
    </tr>
    <tr>
      <th>フォロー人数</th>
      <th>〇〇人</th>
    </tr>
    <tr>
      <th>フォロワー人数</th>
          <th>〇〇人</th>
        </tr> 
    
    <% end %>
  </tbody>       
<% end %>