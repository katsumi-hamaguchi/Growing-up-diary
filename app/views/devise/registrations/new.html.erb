<body class="sign-back">
  <div class = "sign-body">
    <span class="sign-headline">新規登録</span>
    <br><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='row'>
        <div class='col-xs-2'>
        <span>名前</span>
        </div>
        <div class='col-xs-2'>
         （性）<%= f.text_field :last_name, autofocus: true, class: "name-kana-mei" %>
        </div>
        <div class='col-xs-2'>
         （名）<%= f.text_field :first_name, autofocus: true, class: "name-kana-mei" %>
        </div>
      </div><br>
      <div class='row'>
        <div class='col-xs-2'>
          <span>フリガナ</span>
        </div>
        <div class='col-xs-2'>
         （セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "sign-form" %>
        </div>
        <div class='col-xs-2'>
         （メイ）<%= f.text_field :first_name_kana, autofocus: true, class: "sign-form" %>
        </div>
      </div><br>
      <div class='row'>
        <div class='col-xs-2'>
          <span>ニックネーム</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :nickname, autofocus: true, class: "form-sign-up" %>   
        </div>
      </div><br>
      <div class='row'>
        <div class='col-xs-2'>
          <span>メールアドレス</span>
        </div>
        <div class='col-xs-3'>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-sign-up"  %>
        </div>
      </div><br>
      <div class='row'>
        <div class='col-xs-2'>
          <span>郵便番号（ハイフンなし）</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :postcode, autofocus: true, class: "form-sign-up", id: "address_zipcode" %>   
        </div>
      </div><br>

     

     

      <div class='row'>
        <div class='col-xs-2'>
          <span>住所</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :address, autofocus: true, placeholder: '',  class: "form-sign-up", size: 80%>
        </div>
      </div><br>

      <div class='row'>
        <div class='col-xs-2'>
          <span>パスワード（6文字以上）</span>
        </div>      
        <div class='col-xs-4'>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-sign-up", size:50 %>
        </div>
      </div><br>
      <div class='row'>
        <div class='col-xs-2'>
          <span>パスワード（確認用）</span>
        </div>
        <div class='col-xs-4'>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-sign-up", size:50 %>
        </div>
      </div><br>

      <span class="sign_btn">
        <%= f.submit "新規登録",class: "btn btn-primary btn-lg active" %>
      </span>
      <div class= "sign_nodisplay">
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all,:name, :name, class: "h_sign_n"  %>
      </div><!--画面では非表示にしているが、都道府県のコード番号を名前に変更する役割を果たしている-->
    <% end %>
  <br><br>
    <span class="sign-headline">既に登録済みの方</span><br>
    <span class="h_sigin_log"><%= render "devise/shared/links" %></span>
  </div>

</body>
