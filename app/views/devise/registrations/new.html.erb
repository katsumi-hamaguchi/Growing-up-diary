<body>
  <div class="h_sign">
    <span class="h_gs">新規登録</span>

    <br><br><!--改行による隙間明け-->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='row'>
        <div class='col-xs-2'>
        <span>名前</span>
        </div>
        <div class='col-xs-2'>
         （性）<%= f.text_field :last_name, autofocus: true, class: "" %>
        </div>
        <div class='col-xs-2'>
         （名）<%= f.text_field :first_name, autofocus: true, class: "" %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>フリガナ</span>
        </div>
        <div class='col-xs-2'>
         （セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "" %>
        </div>
        <div class='col-xs-2'>
         （メイ）<%= f.text_field :first_name_kana, autofocus: true, class: "" %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>ニックネーム</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :nickname, autofocus: true, class: "" %>   
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>メールアドレス</span>
        </div>
        <div class='col-xs-3'>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ""  %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>郵便番号（ハイフンなし）</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :postcode, autofocus: true, class: "", id: "address_zipcode" %>   
        </div>
      </div>

     <div class='row'>
        <div class='col-xs-2'>
          <span>都道府県</span>
        </div>
        <div class='col-xs-4'>
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all,:name, :name, class: "h_sign_n"  %>
        </div>
     </div>

     <div class='row'>
        <div class='col-xs-2'>
          <span>町名</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :address_city, autofocus: true, class: "", id:"address_city" %>   
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-2'>
          <span>住所</span>
        </div>
        <div class='col-xs-4'>
          <%= f.text_field :address, autofocus: true, placeholder: '',  class: "", size: 69%>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-2'>
          <span>パスワード（6文字以上）</span>
        </div>      
        <div class='col-xs-4'>
          <%= f.password_field :password, autocomplete: "new-password", class: "" %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>パスワード（確認用）</span>
        </div>
        <div class='col-xs-4'>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "" %>
        </div>
      </div>

      <span class="h_sign_b">
        <%= f.submit "新規登録",class: "btn btn-success", id: "sb" %>
      </span>
    <% end %>
  <br><br>
    <span class="h_gs">既に登録済みの方</span><br>
    <span class="h_sigin_log"><%= render "devise/shared/links" %></span>
  </div>

</body>
