<h1>日記編集画面</h1>

<%= form_for(@diary) do |f| %>
      <div class='row'>
        <div class='col-xs-2'>
          <span class="c_h">タイトル</span>
        </div>
        <div class='col-xs-2'>
         <%= f.text_field :title, autofocus: true, class: "", size:15 %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span class="c_h">内容</span>
        </div>
        <div class='col-xs-2'>
          <%= f.text_field :body, autofocus: true, class: "", size:15 %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-2'>
          <span>投稿画像</span>
        </div>
        <div class='col-xs-2'>
          <%= attachment_image_tag @diary, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <%= f.attachment_field :image %>
        </div>
      </div>
    <br> <!--改行による隙間-->
      <div class='row'>
        <div class='col-xs-2'></div>
        <div class='col-xs-1'>
          <%= f.submit "変更する",class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>