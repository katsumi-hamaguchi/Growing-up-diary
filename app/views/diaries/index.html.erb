<%= form_tag(search_path , method: :get) do %>
  <%= text_field_tag :search %>
  <%= select_tag(:option, options_for_select([["日記タイトル", "1"]]))%> 
  <%= select_tag(:choice, options_for_select([["完全一致検索", "1" ],["前方一致検索", "2" ],["後方一致検索", "3" ],["部分一致検索","4"]]))%>
  <%= submit_tag 'Search' %>
<% end %>
<div class='row'>
  <div class='col-xs-6'>
    <h1>投稿日記一覧</h1>
	<% @diaries.each do |diary| %>
		<tr>
			<td>
				<%= link_to(diary.user) do %>
				<%= attachment_image_tag(diary.user, :profile_image, fallback: "no_image.jpg", size: "60x60") %>
				<% end %>
			</td>
			<td><%= @user.nickname %></td>
			<td><%= diary.title %></td>
			<td><%= link_to "詳細", diary_path(diary.id),class: "btn btn-primary" %></td>
		    <% if diary.favorited_by?(current_user) %>
				<td>
				    <%= link_to diary_favorites_path(diary), method: :delete do %>
				    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
				    <%= diary.favorites.count %> いいね
				    <% end %>
				</td>
				<% else %>
				<td>
				    <%= link_to diary_favorites_path(diary), method: :post do %>
				    <i class="fa fa-heart-o" aria-hidden="true"></i>
				    <%= diary.favorites.count %> いいね
				    <% end %>
				</td>
		    <% end %>
			<br>
		  </tr>
	<% end %>
  </div>
  <div class='col-xs-3'>
    <%= render 'tasks/index', task: @task, tasks: @tasks %>
  </div>
</div>