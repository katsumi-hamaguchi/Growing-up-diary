<h1>日記詳細</h1>

<table class="table">
	<tr>
		<td>
			<%= link_to (@diary.user) do %>
			<%= attachment_image_tag(@diary.user, :profile_image, fallback: "no_image.jpg", size: "100x100") %><br>
			<%= @diary.user.nickname %>
			<% end %>
		</td>
		<td><%= link_to @diary.title, @diary %></td>
		<td><%= @diary.body %></td>
		<td><%= attachment_image_tag(@diary, :image, fallback: "no_image.jpg", size: "100x100") %></td>
	<% if @diary.user == current_user %>
		<td><%= link_to "編集する",edit_diary_path(@diary), class: "btn-sm btn-success edit_book_#{@diary.id}" %></td>
		<td><%= link_to "削除する",@diary, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@diary.id}" %></td>
	<% end %>
	</tr>
</table>

<div class="row">
  <div class="col-sm-4">
    <%= form_for [@diary, @diary_comment] do |f| %>
      <%= f.text_area :comment, rows:'6', class: "form-control",placeholder: "コメントをここに" %>
      <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20" %>
    <% end %>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-6">
    <% @diary.diary_comments.each do |diary_comment| %>   
      <a href="#" class="link-author"><%= diary_comment.user.nickname %></a>   
      <span class="comment-date"><%= diary_comment.created_at.strftime('%Y/%m/%d') %></span>
      <span class="comment-entry"><%= diary_comment.comment %></span>
      <br>
    <% end %>
  </div>
</div>