<body class ="event-show-body">
  <div class="event-show-content">
    <p id="notice"><%= notice %></p>

    <p class="events-show">
      <strong>タイトル:</strong><br><br><br>
      <%= @event.title %>
    </p><br><br>

    <p class="events-show">
      <strong>内容:</strong><br><br><br>
      <%= @event.body %>
    </p><br><br>

    <p class="events-show">
      <strong>開始予定:</strong><br><br><br>
      <%= @event.start %>
    </p><br><br>

    <p class="events-show">
      <strong>終了予定:</strong><br><br><br>
      <%= @event.end %>
    </p><br><br>
    
    <div class="row">
      <div class="col-sm-6"></div>
      <div class="col-sm-1">
        <%= link_to '戻る', events_path,class: "btn btn-primary btn-lg active" %>
      </div>
      <div class="col-sm-2">
        <%= link_to '編集する', edit_event_path(@event),class: "btn btn-primary btn-lg active" %> 
      </div>
    </div>
  </div>
</body>
